<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttourverre1</object-name>
    <object-name>inttourverre2</object-name>
    <object-name>inttour</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere1</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intverriere1</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intverriere1</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Fouga-Magister/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.685 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.013 </z-m>
    </offsets>
  </model>

  <!-- Copilote -->
  <model>
    <path>Aircraft/Fouga-Magister/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.290 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.033 </z-m>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Fouga-Magister/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.470 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.094 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntCanopyAvant</name>
    <object-name>intverriere1</object-name>
    <object-name>inttourverre1</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntCanopyAvant</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 80 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.343 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.735 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>IntCanopyArriere</name>
    <object-name>intverriere2</object-name>
    <object-name>inttourverre2</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntCanopyArriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 80 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.027 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.780 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

